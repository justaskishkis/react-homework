@require 'base-config'

bgcLoadingFullPath = #cccccc
bgcLoadingMovingPath = grey
size = 20px
borderWidth = 2px

.{cPre}loading
	&,
	&:after
		border-radius 50%
		size_(size, size)

	&
		border-top borderWidth solid bgcLoadingFullPath
		border-right borderWidth solid bgcLoadingFullPath
		border-bottom borderWidth solid bgcLoadingFullPath
		border-left borderWidth solid bgcLoadingMovingPath
		animation loading 1.1s infinite linear

@keyframes loading
	0%
		transform rotate(0deg)
	100%
		transform rotate(360deg)
